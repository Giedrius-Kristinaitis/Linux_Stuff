[Unit]
Description=Start backlight service on boot
After=suspend.target hibernate.target hybrid-sleep.target suspend-then-hibernate.target

[Service]
Type=oneshot
ExecStart=/bin/bash -c 'systemctl start systemd-backlight@backlight\:amdgpu_bl0'

[Install]
WantedBy=systemd-backlight@backlight:amdgpu_bl0.service suspend.target hibernate.target hybrid-sleep.target suspend-then-hibernate.target